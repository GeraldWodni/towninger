{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/bgb/bgb64.exe",
            "args": [
                "${workspaceFolder}/Towninger.gb"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "buildgb",
            "detail": "Runs BGB with the generated ROM",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "buildgb",
            "type": "shell",
            "command": "make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "custom",
                "applyTo": "allDocuments",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*)\\:(\\d+)\\:\\s(warning|error)\\s\\d+\\:(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "detail": "Generated task to run make"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Generated task to clean the project"
        }
    ]
}